<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- other shapes are oval, line ,ring -->

    <corners
        android:topRightRadius="20dp"
        android:topLeftRadius="40dp"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="40dp" />

    <gradient
        android:type="linear"
        android:startColor="@color/primaryColor"
        android:centerColor="@color/primaryTextColor"
        android:endColor="@color/primaryTextColor"
        android:angle="135"/>


    <size
        android:width="80dp"
        android:height="40dp" />
    <!-- If you want to specify size -->

    <stroke
        android:width="1.3dp"
        android:color="@color/primaryDarkColor" />

    </shape>